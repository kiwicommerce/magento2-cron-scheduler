<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="index">
        <job name="kiwicommerce_cronscheduler_status" instance="KiwiCommerce\CronScheduler\Cron\Status" method="checkstatus">
            <schedule>* * * * *</schedule>
        </job>
    </group>
    <group id="default">
        <job name="kiwicommerce_cronscheduler_jobchecker" instance="KiwiCommerce\CronScheduler\Controller\Adminhtml\Cron\LongJobChecker" method="execute">
            <schedule>*/15 * * * *</schedule>
        </job>
        <job name="kiwicommerce_send_email" instance="KiwiCommerce\CronScheduler\Controller\Adminhtml\Cron\Sendemail" method="execute">
            <config_path>cronscheduler/general/schedule</config_path>
        </job>
    </group>
</config>